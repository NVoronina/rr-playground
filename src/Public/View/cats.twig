<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="csrf-token" content="{{ csrf_token }}">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="css/public.css">
</head>
<body class="page-body">
<h1>{{ title }}</h1>
<ul>
{% for row in result %}
    <li><img src="images/cat.png"/>Name: {{ row.name }} Description: {{ row.description }}</li>
{% endfor %}
</ul>

{% for error in errors %}
    {% if error == 'nameExistCat' %}
        <span class="error">Name has prohibited symbols</span>
    {% endif %}
{% endfor %}
<form id="add_cat" method="post">
    <h3>Add cat</h3>

    <label for="name">Name</label>
    <input type="text" id="name" name="name" required/>

    <label for="type">Type</label>
    <input type="text" id="type" name="type"/>

    <label for="description">Description</label>
    <input type="text" id="description" name="description"/>

    <label for="specials">Specials</label>
    <input type="text" id="specials" name="specials"/>

    <label for="vaccination">Vaccination</label>
    Yes<input type="radio" id="vaccination1" name="vaccination" value="1"/>
    No<input type="radio" id="vaccination0" name="vaccination" value="0"/>
    <button type="submit">Save</button>
    <button type="reset">Clear form</button>
</form>
</body>